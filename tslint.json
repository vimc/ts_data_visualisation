{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "interface-name": [true, "never-prefix"],
        "variable-name": [true, "allow-leading-underscore"],
        "object-literal-sort-keys": false, // keys in alphabetical order
        "no-console": false, // allow console.log()
        "max-classes-per-file": false, // allow multiple classes per file
        "no-empty-interface": false, // allow a derived class to add no new members
        "no-var-requires": false, // const $ = require("jquery"); is a waking nightmare
        "no-eval": false // allow eval in AppendDataSets.ts
    },
    "rulesDirectory": []
}
